<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:minHeight="56dp">

    <!-- Timeline indicator -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginEnd="16dp">

        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E0E0E0"/>


        <View
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#E0E0E0"/>
    </LinearLayout>

    <!-- Content area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Time and status row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tv_event_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textSize="12sp"
                android:textColor="#757575"
                android:textStyle="bold"
                android:fontFamily="monospace"
                tools:text="Aug 5, 1:06 AM"/>

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="#E0E0E0"
                android:layout_marginHorizontal="8dp"/>

            <TextView
                android:id="@+id/tv_event_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"

                android:textSize="10sp"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:text="OUT FOR DELIVERY"/>
        </LinearLayout>

        <!-- Location -->
        <TextView
            android:id="@+id/tv_event_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:textStyle="bold"
            android:layout_marginBottom="2dp"
            android:drawableStart="@drawable/baseline_add_location_alt_24"
            android:drawablePadding="6dp"
            android:drawableTint="#757575"
            tools:text="Caloocan, Koronadal, South Cotabato"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tv_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#757575"
            android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            tools:text="Package is out for delivery. Your parcel is on the way to the destination address."/>
    </LinearLayout>

    <!-- Chevron indicator -->
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_expand_more"
        android:tint="#E0E0E0"
        android:layout_marginStart="8dp"/>
</LinearLayout>